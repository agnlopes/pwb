# API Configuration
API_PREFIX=/api/v1
API_TITLE=Portfolio Workbench API
API_VERSION=1.0.0
API_DESCRIPTION=API for managing investment portfolios

# Database Configuration
DB_URL=sqlite+aiosqlite:///./test.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/test.log

# Security Configuration
SEC_SECRET_KEY=test_secret_key
SEC_ALGORITHM=HS256
SEC_TOKEN_EXPIRE_MINUTES=30
SEC_CORS_ORIGINS=["http://localhost:8000"]

# CORS Configuration
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true 